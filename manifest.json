{
    "manifest_version": 3,
    "name": "Lens Image Searcher",
    "version": "1.0",
    "description": "Captures the current tab, searches with Google Lens, and extracts text from the first result.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "offscreen",
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess"
    ],
    "host_permissions": [
        "*://*.google.com/*",
        "*://*.googleusercontent.com/*",
        "<all_urls>"
    ],
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "ruleset_1",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    }
}